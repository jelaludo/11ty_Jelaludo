---
layout: base.njk
---

<main id="main" class="splash-layout">
    <section class="splash-hero" data-hero data-images='{{ heroImages | dump | safe }}'>
        <figure class="splash-hero__image">
            <img class="splash-hero__img" src="" alt="" decoding="async" loading="lazy">
        </figure>
        <div class="splash-hero__overlay"></div>
        <div class="splash-hero__content">
            <p class="splash-hero__cta">Scroll to explore</p>
            <button type="button" class="splash-hero__scroll" data-scroll-gallery aria-label="Scroll to gallery">
                <span class="arrow"></span>
            </button>
        </div>
    </section>
    {{ content | safe }}
</main>

<script type="module" src="/js/splash-hero.js"></script>

